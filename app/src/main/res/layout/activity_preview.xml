<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="40dp"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#FBF191"
        app:cardCornerRadius="10dp"
        app:cardUseCompatPadding="true">

        <TextView
            android:id="@+id/text_view_message"
            android:textSize="16sp"
            android:fontFamily="sans-serif-light"
            android:textColor="#1E1D1D"
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="This is my example text to see how my text looks inside of card view in this application and other apps."/>


    </androidx.cardview.widget.CardView>


    <Button
        android:id="@+id/send_message_button"
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_send_message"
        style="@style/Widget.AppCompat.Button.Colored"/>



</LinearLayout>